{
  "name": "express-react-graphql",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir ./server/dist",
    "start": "node dist/index.js",
    "dev": "nodemon --exec npx babel-node ./server/index.js",
    "prettier": "prettier --config ./.prettierrc --write \"**/*.js\"",
    "pretest": "eslint --ignore-path .gitignore .",
    "postinstall": "rm -rf dist && yarn run build",
    "lint": "yarn prettier --write --check --config ./.prettierrc \"**/*.js\" && eslint --fix ./server",
    "release": "release-it patch --no-npm.publish",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/node": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "apollo-engine": "^1.1.2",
    "apollo-server-express": "^2.26.0",
    "body-parser": "^1.20.0",
    "colors": "^1.4.0",
    "colorthief": "^2.3.2",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "graphql-compose": "^9.0.8",
    "graphql-compose-connection": "^8.2.1",
    "graphql-compose-mongoose": "^9.7.1",
    "graphql-middleware": "^6.1.32",
    "graphql-tools": "^8.3.4",
    "mongoose": "^6.5.3",
    "mongoose-bcrypt": "^1.10.0",
    "mongoose-timestamp": "^0.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.11.8",
    "@graphql-codegen/fragment-matcher": "3.3.1",
    "@graphql-codegen/introspection": "2.2.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.5",
    "babel-preset-env": "^1.7.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.23.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "fs-extra": "^10.1.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1"
